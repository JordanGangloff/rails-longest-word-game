<h1>New game !</h1>

<div class='letters'>
  <% @letters.each do |letter|%>
    <p class='letter'><%=letter%></p>
  <%end%>
</div>

<form class="guessing" action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <p>
    <label>What is the longest word you can find?</label><br>
    <input type="text" name="guess" placeholder="Type a word">
  <input type="submit" value="Try">
  </p>
</form>
